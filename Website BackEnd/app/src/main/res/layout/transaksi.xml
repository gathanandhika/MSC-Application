<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtransfer"
    tools:context=".TransaksiActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Pembayaran Transfer melalui (DP/FULL)"
        android:layout_marginTop="130dp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textSize="15dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_rekening"
        android:layout_marginTop="148dp"
        android:layout_marginBottom="260dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-46dp"
        tools:listitem="@layout/item_rekening" />

    <Button
        android:id="@+id/btn_konfirmasi"
        android:layout_width="225dp"
        android:layout_height="47dp"
        android:backgroundTint="#48734F"
        android:text="Konfirmasi"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rc_rekening"
        app:layout_constraintVertical_bias="0.075" />

</androidx.constraintlayout.widget.ConstraintLayout>