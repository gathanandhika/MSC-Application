<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="7dp"
        android:padding="10dp"
        android:elevation="20dp"
        app:cardCornerRadius="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team "
                android:textColor="#5d8c69"
                android:textAlignment="center"
                android:id="@+id/itm_namatim"
                android:layout_below="@id/itm_tanggal"
                />
            <TextView
                android:textSize="15sp"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipe"
                android:textAlignment="center"
                android:id="@+id/itm_tipe"
                android:layout_below="@id/itm_namatim"
                />

            <View
                android:layout_width="400dp"
                android:layout_height="1dp"
                android:layout_below="@id/itm_tanggal"
                android:layout_marginTop="0.5dp"

                android:background="#E5E5E5" />

            <View
                android:layout_width="400dp"
                android:layout_height="1dp"
                android:layout_marginTop="0.5dp"
                android:layout_below="@id/itm_namatim"
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/itm_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:layout_marginStart="75dp"
                android:textSize="15sp"
                android:textStyle="normal"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/itm_tanggal"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">
                <TextView
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mulai"
                    android:id="@+id/itm_mulai"
                    android:layout_toEndOf="@id/itm_tanggal"
                    />

                <TextView
                    android:id="@+id/itm_selesai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/itm_mulai"
                    android:text="Selesai"
                    android:textSize="15sp"
                    android:textStyle="normal" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
